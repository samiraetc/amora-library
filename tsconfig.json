{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "jsx": "react",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "removeComments": false,
      "noLib": false,
      "skipLibCheck": true,
      "target": "es6",
      "sourceMap": true,
      "useUnknownInCatchVariables": false,
      "lib": [
        "es6",
        "DOM"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "include": [
      "**/src",
      "stories",
    ],
    "exclude": [
      "demo",
      "node_modules",
      "**/__tests__"
    ]
  }