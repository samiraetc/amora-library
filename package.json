{
  "name": "amora-library",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "http://samiraetc.github.io/amora-library",
  "scripts": {
    "presetup": "npm run clean",
    "setup": "npm ci && husky install && lerna bootstrap",
    "postsetup": "npm run build",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "lint": "eslint './**/*.[jt]s?(x)'",
    "lint:fix": "npm run lint -- --fix",
    "dist": "lerna exec -- rm -rf lib build && lerna run dist && node ./assetsGatherer.js",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "npm run build && npm run dist && storybook build -c .storybook -o story",
    "build-storybook": "storybook build",
    "storybook:publish": "npm run storybook:build && node ./publish-storybook",
    "generate:module": "schematics ./packages/generate-packages/:module --debug=false",
    "version-exact": "lerna version --exact",
    "patch-version": "lerna version patch",
    "major-version": "lerna version major",
    "minor-version": "lerna version minor"
  },
  "devDependencies": {
    "@angular-devkit/schematics-cli": "^16.2.4",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/addon-styling-webpack": "^0.0.5",
    "@storybook/blocks": "^7.4.6",
    "@storybook/react": "^7.4.6",
    "@storybook/react-webpack5": "^7.4.6",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/forms": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "lerna": "^7.3.0",
    "npm": "^10.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prop-types": "^15.8.1",
    "storybook": "^7.4.6",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
